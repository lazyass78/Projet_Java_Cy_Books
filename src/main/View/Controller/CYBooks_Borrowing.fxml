<?xml version="1.0" encoding="UTF-8"?>
<!-- This is the FXML file for the "CYBooks_Borrowing" view -->
<!-- It defines the layout and components of the borrowing management page -->

<!-- Import statements for JavaFX components -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!-- AnchorPane serves as the root container -->
<AnchorPane fx:id="mainContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.CYBooksHomeController">
   <children>
       <!-- Label for the title of the page -->
      <Label layoutX="203.0" layoutY="14.0" text="Gestion des emprunts" textFill="#4da6ff">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>

       <!-- Button to add a new borrowing -->
      <Button fx:id="NewBorrowing" layoutX="30.0" layoutY="54.0" mnemonicParsing="false" onAction="#AddBorrowing" text="+ Nouvel emprunt" />

       <!-- Label for the borrowing history -->
      <Label layoutX="30.0" layoutY="91.0" text="Historique des emprunts" />

       <!-- TableView to display the borrowing history -->
      <TableView layoutX="30.0" layoutY="114.0" prefHeight="271.0" prefWidth="561.0">
        <columns>
          <TableColumn prefWidth="100.79998779296875" text="ISBN" />
          <TableColumn prefWidth="91.2000732421875" text="Nom" />
            <TableColumn prefWidth="87.2000732421875" text="Auteur" />
            <TableColumn prefWidth="48.800048828125" text="Année" />
            <TableColumn prefWidth="77.5999755859375" text="Editeur" />
            <TableColumn prefWidth="60.00006103515625" text="Stock" />
            <TableColumn prefWidth="101.5999755859375" text="Genre   " />
        </columns>
      </TableView>

       <!-- Button to return to the home page -->
      <Button fx:id="BackHomePage" layoutX="441.0" layoutY="54.0" mnemonicParsing="false" onAction="#returnMain" text="Retour à l'accueil" />
   </children>
</AnchorPane>
