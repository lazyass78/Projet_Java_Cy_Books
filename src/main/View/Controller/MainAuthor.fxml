<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainContainer" prefWidth="1080.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainAuthorController">
    <top>
        <VBox prefHeight="397.0" prefWidth="3218.0" spacing="10">
            <Label text="Book Search" />
            <HBox alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="1080.0" spacing="10">
                <Button fx:id="homeButton" onAction="#handleHome" text="Return home" />
            </HBox>
            <TextField fx:id="authorField" promptText="Enter author's name..." />
            <TextField fx:id="yearField" promptText="Publication date" />
            <TextField fx:id="languageField" promptText="Language" />
            <TextField fx:id="titleField" promptText="Enter book title..." />
            <Button onAction="#handleSearch" text="Search" />
            <Label text="Search Results:" />
            <TableView fx:id="documentTable">
                <columns>
                    <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
                    <TableColumn fx:id="titleColumn" prefWidth="75.0" text="Title" />
                    <TableColumn fx:id="authorColumn" prefWidth="75.0" text="Author" />
                    <TableColumn fx:id="yearColumn" prefWidth="75.0" text="Date" />
                    <TableColumn fx:id="borrowColumn" prefWidth="75.0" text="Borrow" />
                </columns>
            </TableView>
        </VBox>
    </top>
    <center>
        <VBox fx:id="bookContainer" prefHeight="0.0" prefWidth="150.0" spacing="5" />
    </center>
    <bottom>
        <HBox alignment="CENTER" prefHeight="0.0" prefWidth="2662.0" spacing="10">
            <Label fx:id="pageInfo" />
        </HBox>
    </bottom>
</BorderPane>
