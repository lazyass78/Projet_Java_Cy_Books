<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainContainer" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.MainAuthorController">
    <top>
        <VBox spacing="10">
            <Label text="Book Search"/>
            <TextField fx:id="authorField" promptText="Enter author's name..."/>
            <TextField fx:id="dateField" promptText="Publication date"/>
            <TextField fx:id="languageField" promptText="Language"/>
            <TextField fx:id="titleField" promptText="Enter book title..."/>
            <Button text="Search" onAction="#handleSearch"/>
            <Label text="Search Results:"/>
        </VBox>
    </top>
    <center>
        <VBox fx:id="bookContainer" spacing="5"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="prevButton" text="Previous" onAction="#handlePrev" disable="true"/>
            <Label fx:id="pageInfo"/>
            <Button fx:id="nextButton" text="Next" onAction="#handleNext" disable="true"/>
        </HBox>
    </bottom>
</BorderPane>
